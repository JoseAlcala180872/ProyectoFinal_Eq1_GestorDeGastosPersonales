<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/moradoBackground">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/nutemu"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/imagefour"
        android:layout_gravity="center_horizontal"
        />

    <ImageView
        android:layout_width="142dp"
        android:layout_height="142dp"
        android:src="@drawable/imagesix"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preparate para cuidar\ntu dinero de forma 'segura'"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:paddingTop="10dp"
        android:fontFamily="@font/inter18ptregular"
        android:layout_gravity="center"
        android:textAlignment="center"
        />

    <Button
        android:id="@+id/btnIngresar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingresar"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/naranjaBotones"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:fontFamily="@font/inter18ptbold"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:src="@drawable/imagethree"
        android:layout_gravity="center_horizontal"
        android:scaleType="center"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="70dp"
        android:gravity="center"
        android:background="@drawable/fondo_naranja_redondo">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Â¿Aun no te has registrado?"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/inter18ptregular"
            android:textColor="@color/black"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/registro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registrate"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/inter18ptbold"
            android:textSize="16sp"
            android:textColor="@color/morado"/>
    </LinearLayout>

</LinearLayout>