<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registro"
    android:orientation="vertical"
    android:background="@color/rosa"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/moradoClaro"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/imagesix"
            android:layout_marginEnd="12dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registro"
            android:textSize="28sp"
            android:textColor="@color/black"
            android:paddingLeft="50dp"
            android:textStyle="bold"
            android:gravity="center" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="50dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre(s):"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textStyle="italic"
        android:layout_marginLeft="45dp"
        />

    <EditText
        android:id="@+id/etNombre"
        android:layout_width="319dp"
        android:layout_height="50dp"
        android:hint="Dwayne"
        android:background="@color/white"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apellidos:"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textStyle="italic"
        android:layout_marginLeft="45dp"
        />

    <EditText
        android:id="@+id/etApellido"
        android:layout_width="319dp"
        android:layout_height="50dp"
        android:hint="Johnson"
        android:background="@color/white"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Correo:"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textStyle="italic"
        android:layout_marginLeft="45dp"
        />

    <EditText
        android:id="@+id/etCorreo"
        android:layout_width="319dp"
        android:layout_height="50dp"
        android:hint="ejemplo@dominio.com"
        android:background="@color/white"
        android:layout_gravity="center_horizontal"
        android:inputType="textEmailAddress"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contrase単a:"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textStyle="italic"
        android:layout_marginLeft="45dp"
        />

    <EditText
        android:id="@+id/etContrase単a"
        android:layout_width="319dp"
        android:layout_height="50dp"
        android:hint="*******"
        android:background="@color/white"
        android:layout_gravity="center_horizontal"
        android:inputType="textPassword"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirmar contrase単a:"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textStyle="italic"
        android:layout_marginLeft="45dp"
        />

    <EditText
        android:id="@+id/etConfirmarContrase単a"
        android:layout_width="319dp"
        android:layout_height="50dp"
        android:hint="*******"
        android:background="@color/white"
        android:layout_gravity="center_horizontal"
        android:inputType="textPassword"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha de nacimiento:"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textStyle="italic"
        android:layout_marginLeft="45dp"
        />

    <EditText
        android:id="@+id/etFechaNacimiento"
        android:layout_width="319dp"
        android:layout_height="50dp"
        android:hint="DD/MM/AAAA"
        android:background="@color/white"
        android:layout_gravity="center_horizontal"
        />

    <Button
        android:id="@+id/btnRegistrarGasto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrarte"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/naranja"
        android:textColor="@color/black"
        android:textSize="18sp"
   android:layout_marginTop="30dp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:src="@drawable/imagethree"
        android:layout_gravity="center_horizontal"
        android:scaleType="center"
        android:layout_marginTop="4dp" />
    </LinearLayout>

</LinearLayout>